{
  "name": "simple-cat-tool-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run rebuild:electron && npm run dev --workspace=apps/desktop",
    "build": "npm run rebuild:electron && npm run build --workspace=apps/desktop",
    "pack": "npm run pack --workspace=apps/desktop",
    "pack:win": "node scripts/pack-platform.mjs --platform=win",
    "pack:mac": "node scripts/pack-platform.mjs --platform=mac",
    "worktree:deps:link": "node scripts/worktree-link-deps.mjs",
    "worktree:deps:link:force": "node scripts/worktree-link-deps.mjs --force",
    "lint": "npm run lint --workspaces",
    "gate:arch": "node scripts/gate-architecture-check.mjs",
    "gate:style": "node scripts/gate-style-classes.mjs",
    "gate:file-size": "node scripts/gate-file-size.mjs",
    "gate:smoke:large-file": "vitest run apps/desktop/src/main/services/modules/TMModule.test.ts -t \"scans segments page by page\"",
    "gate:check": "npm run typecheck --workspace=apps/desktop && npm run gate:arch && npm run gate:style && npm run gate:file-size && npm run lint && npm run gate:smoke:large-file",
    "rebuild:electron": "node scripts/rebuild-electron.mjs",
    "rebuild:test": "npm rebuild better-sqlite3",
    "test": "npm run rebuild:test && vitest run",
    "test:watch": "vitest",
    "postinstall": "npm run rebuild:electron",
    "format": "prettier --write ."
  },
  "volta": {
    "node": "20.19.0",
    "npm": "10.8.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "electron-rebuild": "^3.2.9",
    "prettier": "^3.8.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}
